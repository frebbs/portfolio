<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Page</title>
</head>
<link href="https://fonts.googleapis.com/css2?family=Teko:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/css/homepage.css">

<body>

    <%- include ('./partials/_navigation') %>

    <div id="jsContent" class="container">
        <div class="item recentPosts">
            <h3>Recent posts</h3>
            <div id="userPosts">
                <% posts.forEach((post) => { %>
                    <div class="post">
                        <img class="postImg" src="<%= post.postImg%>" height="100px">
                        <p class="postTitle"><i>Title: <%= post.title %></i></p>
                        <p class="PostBodyPart"><i><%= post.body %></i></p>
                        <p class="postedCreatedBy">Posted By: <%= post.createdBy.username %></p>
                        <a href="/members/posts/<%= post._id%>">Show full post</a>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <script src="/JavaScript/jQuery.js"></script>
</body>
</html>
